extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='text') Text:
      input#text.form-control(type='textarea' name='text' value=(undefined===comment? '' : comment.text))
    div.form-group
      input#postid.form-control(type='hidden' name='postid' required='true' value=post._id )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg