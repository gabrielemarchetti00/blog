extends layout

block content
    .home-header
      h1(class="welcome-title") Welcome back: #{currentUser.username}
      .home-buttons
        if (currentUser.status == "writer")
            a(href="/new-post") 
                button Create new post
        a(href="/log-out")
            button Log out

    ul(class='post-ul')
      each post in post_list
        li
          .post-div
            a(href=post.url) #{post.title}
            p #{post.text}
      else
        li There are no posts.