extends layout

block content
  div.signup-body
    div.signup-content
      h1(class="signup-title")= title

      form(method='POST' action='' class='signup-form')
        label(for='username') Username:
        input#username.form-control(type='text', placeholder='mario' name='username' required='true' value=(undefined===user? '' : user.username))
        label(for='email') Email:
        input#email.form-control(type='email', placeholder='mario.rossi@mail.it' name='email' required='true' value=(undefined===user? '' : user.email))
        label(for='password') Password:
        input#password.form-control(type='password', placeholder='Pwd00' name='password' required='true')
        label(for='confirmPassword') Confirm password:
        input#confirmPassword.form-control(type='password', placeholder='Pwd00' name='confirmPassword' required='true')
        label(for='status') Status:
        select#status.form-control(type='select', placeholder='Select status' name='status' required='true' )
          option(value="writer") Writer
          option(value="reader") Reader
        button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
