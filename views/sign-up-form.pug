extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='mrMario00' name='username' value=(undefined===user? '' : user.username))
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='mario.rossi@mail.it' name='email' required='true' value=(undefined===user? '' : user.email))
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', placeholder='mario26!' name='password' required='true')
    div.form-group
      label(for='confirmPassword') Confirm password:
      input#confirmPassword.form-control(type='password', placeholder='mario26!' name='confirmPassword' required='true')
    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select', placeholder='Select status' name='status' required='true' )
        option(value="writer") Writer
        option(value="reader") Reader
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
