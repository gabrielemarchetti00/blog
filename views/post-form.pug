extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', name='title', value=(undefined===post? '' : post.title) )
    div.form-group
      label(for='text') Text:
      input#text.form-control(type='textarea', name='text' value=(undefined===post? '' : post.text))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

  a(href="/") Home