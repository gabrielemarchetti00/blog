extends layout

block content
    .postform-content
      h1(class='postform-title')= title

      form(method='POST' action='' class='post-form')
        label(for='title') Title:
        input#title.form-control(type='text', name='title', value=(undefined===post? '' : post.title))
        label(for='text') Text:
        textarea#text.form-control(name="text", cols="30", rows="10", value=(undefined===post? '' : post.text)) 
        button.btn.btn-primary(type='submit') Submit

      if errors
        ul
          for error in errors
            li!= error.msg
